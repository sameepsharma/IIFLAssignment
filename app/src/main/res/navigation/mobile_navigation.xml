<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.sameep.iiflassignment.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/navigateToArticleFrag"
            app:destination="@id/nav_article">
           </action>
    </fragment>

    <fragment
        android:id="@+id/nav_article"
        android:name="com.sameep.iiflassignment.ui.article.ArticleFragment"
        android:label="@string/article"
        tools:layout="@layout/fragment_article">
        <argument
            android:name="article"
            app:argType="com.sameep.iiflassignment.rest.response.ResponseItem" />
    </fragment>

    <fragment
        android:id="@+id/nav_about"
        android:name="com.sameep.iiflassignment.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_slideshow" />
</navigation>